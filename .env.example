# Thales DPoD MCP Server Configuration
# Copy this file to .env and update with your actual credentials

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# DPoD OAuth Client Credentials
# Get these from your DPoD portal under Credentials
DPOD_CLIENT_ID=your_client_id_here
DPOD_CLIENT_SECRET=your_client_secret_here

# DPoD API Endpoints
# Choose the appropriate region for your DPoD account
DPOD_BASE_URL=https://thales.na.market.dpondemand.io
DPOD_AUTH_URL=https://access.dpondemand.io/oauth/v1/token

# Read-only mode (optional, defaults to false)
# When enabled, prevents destructive operations
DPOD_READ_ONLY_MODE=false

# Logging level (optional, defaults to INFO)
# Available levels: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# REGIONAL CONFIGURATION EXAMPLES
# =============================================================================

# North America (default)
# DPOD_BASE_URL=https://thales.na.market.dpondemand.io

# Europe
# DPOD_BASE_URL=https://thales.eu.market.dpondemand.io

# Asia Pacific
# DPOD_BASE_URL=https://thales.ap.market.dpondemand.io
